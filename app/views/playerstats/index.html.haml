- title "MI6 Player Stats"
= javascript_include_tag "playerstats"

#graph_container{:data => {:pie => @pie_data}}

%hr/

%table.tablesorter
  %thead
    %tr
      %th Soldier Name
      %th Score
      %th Score/Min
      %th Kills
      %th KDR
      %th Headshot %
      %th Rounds Played
  %tbody
    = render @players

= paginate @players
