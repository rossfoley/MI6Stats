.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{data: {toggle: "collapse", target: ".nav-collapse"}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "MI6 Server Stats", root_path, class: "brand"
      .nav-collapse
        %ul.nav
          %li= link_to "Home", root_path
          %li.dropdown
            = link_to "#", class: "dropdown-toggle" do
              Player Stats
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Full Table", playerstats_path
              %li= link_to "Headshot Table", headshot_table_path
              %li= link_to "iFrame Version", playerstats_table_path
          %li= link_to "Map Stats", mapstats_path
          %li.dropdown
            = link_to "#", class: "dropdown-toggle" do
              Weapon Stats
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Assault Rifles", assaultrifle_path
              %li= link_to "SMG", smg_path
              %li= link_to "LMG", lmg_path
              %li= link_to "Sniper Rifles", sniper_path
              %li= link_to "Shotguns", shotgun_path
              %li= link_to "Handguns", handgun_path
              %li= link_to "Explosives", explosives_path
              %li= link_to "Projectile Explosives", projectile_path
              %li= link_to "Melee", melee_path
          %li.dropdown
            = link_to "#", class: "dropdown-toggle" do
              Dog Tags
              %b.caret
            %ul.dropdown-menu
              %li= link_to "All Players", dogtags_path
              %li= link_to "Top Players", dogtags_top_players_path

